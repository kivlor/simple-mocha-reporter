{
  "name": "simple-mocha-reporter",
  "version": "1.0.0",
  "description": "a simple, readable mocha reporter",
  "keywords": ["simple", "mocha", "reporter"],
  "author": "Andrew Gallagher <kivlor@gmail.com>",
  "main": "lib/reporter.js",
  "bugs": {
    "url": "https://github.com/kivlor/simple-mocha-reporter/issues"
  },
  "repository": "github:kivlor/simple-mocha-reporter",
  "scripts": {
    "build": "coffee --bare --no-header -o lib/ -c src/",
    "prepublish": "npm run build",
    "test": "mocha --compilers coffee:coffee-script/register",
    "test:reporter": "npm run build && npm test -- --reporter lib/reporter"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "mocha": "^3.2.0"
  },
  "devDependencies": {
    "coffee-script": "^1.12.2"
  }
}
